<!DOCTYPE html>
<html>
<head>
  <title>Carga Mental - Play</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/png" sizes="64x64" href="/icons8-brain-64.png">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/css/styles.css">  
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
  <div id="container" class="container">
    <h1>Jogo</h1>

    <div id="result-block" style="display:none;">
      <p id="result-message"></p>
      <button class="button" id="result-button" style="display:none;"><i class="fa-solid fa-magnifying-glass" style="font-size:xx-large; color: #000000;"></i></button>
      <button class="button" id="saveButton" style="display:none;"><i class="fas fa-save" style="font-size:xx-large; color: #000000;"></i></button>



      <div id="result-list" style="display:none;">
        <ul id="items-list" style="list-style:none;margin-left:-3%;"></ul>
        <p id="max"></p>
        <p id="wins"></p>
        <p id="lefts"></p>
        <p id="interval"></p>
      </div>      

    </div>

    <div id="reset-block" style="display:none;">
      <h3 id="message"></h3>      
      <form action="game" method="post">
        <input type="hidden" name="percentage" id="percentage" value="<%= percentage %>">        
        <input type="hidden" name="rounds" id="rounds" value="<%= rounds %>">      
        <input type="hidden" name="timeReward" id="timeReward" value="<%= timeReward %>">      
        <button class="button" id="game"><i class="fa-solid fa-play" style="font-size:xx-large; color: #000000;"></i></button>
      </form>
      <p>Clique para reiniciar</p>      
    </div>

    <div id="play-console">
      <p>Rodada: <span id="round">1</span> / 10</p>
      <div id="buttons" class="buttons">
        <button class="button" id="left" class="button primary"></button>
        <button class="button" id="right" class="button primary"></button>
      </div>
    </div>
     
    <div id="img-display" class="image-container" style="display:none;">
      <img id="prize-image" width="447" src="/images/50reais.png" alt="Prize Image" style="display:none;">
      <img id="no-prize-image" width="447" src="/images/5reais.png" alt="No Prize Image" style="display:none;">
    </div>

    <div id="chosen-block" style="text-align:center; display:none">
      <h1 id="choice"></h1>
    </div>

    <div id="loader-block" class="loader-block" style="display:block;">
      <p>Tempo Restante: <span id="timer">6</span> segundos</p>         
    
     <div id="timer" style="color:white; display:none;">00:00:00</div>
     <text x="100" y="100" text-anchor="middle" style="display:none;"><tspan id="timeLeft"></tspan></text>

      <div class="timer animatable">
      <svg>
        <circle cx="50" cy="50" r="33"/>
        <circle cx="50" cy="50" r="33" pathLength="1" />
      </svg>
      </div>
    </div>
   

  </div>

  <script>
    function resetCountdown(seconds) {
      currentRound++;
      secondsLeft = seconds;
      // start timer
      startCountdown();
      // next round
      document.getElementById('round').textContent = currentRound;
    }


    function startCountdown() {
      const timerElement = document.getElementById('timer');
      timerElement.textContent = secondsLeft;
      countdownInterval = setInterval(function() {
        secondsLeft--;
        if (secondsLeft >= 0) {
          timerElement.textContent = secondsLeft;
        }
        if (secondsLeft === 0) {
          clearInterval(countdownInterval);
          if (currentRound < 10) {
            // currentRound++;
            // document.getElementById('round').textContent = currentRound;
            //Â secondsLeft = 6;
            $('#loader-block').hide();
            $('#buttons').hide();
            $('#reset-block').show();    
            // setTimeout(startCountdown, 1000); // Start the next round after a 1-second delay
          } else {
            document.getElementById('round').textContent = '10 (Game Over)';
            timerElement.textContent = '0';
          }
        }
      }, 1000);
    }


  </script>


